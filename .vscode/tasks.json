{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Version: Patch (Bug Fix)",
      "type": "shell",
      "command": "npm test && npm run build && npm version patch && git push --follow-tags",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Version: Minor (New Feature)",
      "type": "shell",
      "command": "npm test && npm run build && npm version minor && git push --follow-tags",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Version: Major (Breaking Change)",
      "type": "shell",
      "command": "npm test && npm run build && npm version major && git push --follow-tags",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Test",
      "type": "npm",
      "script": "test",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Build",
      "type": "npm",
      "script": "build",
      "problemMatcher": ["$tsc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Test with Coverage",
      "type": "npm",
      "script": "test:coverage",
      "problemMatcher": [],
      "group": "test"
    }
  ]
}
